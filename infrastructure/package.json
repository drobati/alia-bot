{
  "name": "alia-bot-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Alia Bot",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:prod": "cdk synth -c environment=prod",
    "synth:staging": "cdk synth -c environment=staging",
    "diff": "cdk diff",
    "diff:prod": "cdk diff -c environment=prod",
    "diff:staging": "cdk diff -c environment=staging",
    "deploy": "cdk deploy",
    "deploy:prod": "cdk deploy -c environment=prod",
    "deploy:staging": "cdk deploy -c environment=staging",
    "destroy": "cdk destroy"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "aws-cdk": "2.1100.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.232.1",
    "constructs": "^10.0.0"
  }
}
